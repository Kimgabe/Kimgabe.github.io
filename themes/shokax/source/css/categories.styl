// Categories page styles
// ==================================================

.categories-grid {
  padding: 1rem 0;
  
  .category-section {
    margin-bottom: 2.5rem;
    
    .main-category-title {
      display: flex;
      align-items: center;
      margin-bottom: 1.5rem;
      font-size: 1.5rem;
      font-weight: 600;
      color: var(--color-text);
      
      .emoji {
        margin-right: 0.75rem;
        font-size: 1.75rem;
      }
    }
    
    .category-cards-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 1.5rem;
      
      +mobile() {
        grid-template-columns: 1fr;
        gap: 1rem;
      }
    }
  }
}

.category-card {
  shadow-box();
  padding: 1.5rem;
  the-transition(0.3s);
  background: var(--color-card-bg);
  cursor: pointer;
  
  &:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }
  
  &.empty-category {
    opacity: 0.6;
    cursor: default;
    
    &:hover {
      transform: none;
      box-shadow: 0 .625rem 1.875rem -.9375rem var(--box-bg-shadow);
    }
  }
  
  a {
    text-decoration: none;
    color: inherit;
    display: block;
  }
  
  .card-icon {
    text-align: center;
    margin-bottom: 1rem;
    
    .card-emoji {
      font-size: 2.5rem;
      line-height: 1;
    }
  }
  
  .card-content {
    text-align: center;
    
    .card-title {
      margin: 0 0 0.5rem 0;
      font-size: 1.1rem;
      font-weight: 500;
      color: var(--color-text);
    }
    
    .card-count {
      font-size: 0.9rem;
      color: var(--color-text-secondary);
      
      &.coming-soon {
        font-style: italic;
        color: var(--color-orange);
      }
    }
  }
  
  .card-content-disabled {
    text-align: center;
    opacity: 0.7;
  }
}

// Category specific colors
.programming-card {
  border-left: 4px solid var(--color-blue);
}

.data-science-card {
  border-left: 4px solid var(--color-green);
}

.database-card {
  border-left: 4px solid var(--color-purple);
}

.ai-ml-card {
  border-left: 4px solid var(--color-pink);
}

.portfolio-card {
  border-left: 4px solid var(--color-orange);
}

.tools-card {
  border-left: 4px solid var(--color-cyan);
}

.growth-card {
  border-left: 4px solid var(--color-yellow);
}

// Category page post grid styles
.posts-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
  gap: 2rem;
  margin: 2rem 0;
  
  +mobile() {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
}

.post-card {
  shadow-box();
  overflow: hidden;
  the-transition(0.3s);
  background: var(--color-card-bg);
  
  &:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 35px rgba(0, 0, 0, 0.15);
  }
  
  .card-cover {
    height: 200px;
    overflow: hidden;
    
    a {
      display: block;
      width: 100%;
      height: 100%;
    }
    
    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      the-transition(0.3s);
    }
  }
  
  &:hover .card-cover img {
    transform: scale(1.05);
  }
  
  .card-content {
    padding: 1.5rem;
    
    .card-meta {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 1rem;
      font-size: 0.875rem;
      color: var(--color-text-secondary);
      
      time {
        font-weight: 500;
      }
      
      .card-categories {
        display: flex;
        gap: 0.5rem;
        
        .category-tag {
          background: var(--color-accent-bg);
          color: var(--color-accent);
          padding: 0.25rem 0.5rem;
          border-radius: 0.25rem;
          font-size: 0.75rem;
          font-weight: 500;
        }
      }
    }
    
    .card-title {
      margin-bottom: 1rem;
      
      a {
        text-decoration: none;
        color: var(--color-text);
        font-size: 1.1rem;
        font-weight: 600;
        line-height: 1.4;
        
        &:hover {
          color: var(--color-pink);
        }
      }
    }
    
    .card-excerpt {
      color: var(--color-text-secondary);
      font-size: 0.9rem;
      line-height: 1.6;
      margin-bottom: 1rem;
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
    
    .card-footer {
      .card-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        
        .tag {
          background: var(--color-bg-secondary);
          color: var(--color-text-secondary);
          padding: 0.25rem 0.5rem;
          border-radius: 0.25rem;
          font-size: 0.75rem;
          text-decoration: none;
          
          &:hover {
            background: var(--color-pink);
            color: white;
          }
        }
      }
    }
  }
}

// Category breadcrumb styles
.category-breadcrumb {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 1rem;
  margin-bottom: 2rem;
  
  a {
    color: var(--color-pink);
    text-decoration: none;
    
    &:hover {
      text-decoration: underline;
    }
  }
  
  small {
    color: var(--color-text-secondary);
  }
}