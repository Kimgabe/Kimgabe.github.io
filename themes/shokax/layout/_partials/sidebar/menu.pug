each value, name in theme.menu
    - var path = value.split('||')
    - var itemURL = path[0] ? path[0].trim() : '/'
    - var itemIcon = path[1] ? path[1].trim() : ''
    - var rawMenuText = __('menu.' + name).replace('menu.', '')
    - var menuText = rawMenuText.charAt(0).toUpperCase() + rawMenuText.slice(1)
    
    li(class="item")
        // 이모지인 경우와 일반 아이콘인 경우를 구분
        if itemIcon.length === 1 || /[\u{1F600}-\u{1F6FF}]|[\u{2600}-\u{26FF}]|[\u{2700}-\u{27BF}]/u.test(itemIcon)
            != _url(itemURL, itemIcon + ' ' + menuText, {rel: 'section'})
        else
            != _url(itemURL, '<i class="ic i-' + itemIcon + '"></i>' + menuText, {rel: 'section'})
